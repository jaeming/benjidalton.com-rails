.row
  %h2.section_title
    = link_to 'Blog', articles_path, onclick: "routeTo(this)"
    > #{@article.title}
  .border &nbsp;    
  %p
    ~ markdown @article.text
  %small
    = link_to "- Posted on #{@article.created_at.strftime('%B %d, %Y')}", @article, onclick: "routeTo(this)"
  - if current_user
    = link_to 'Edit', edit_article_path(@article), class: 'button small alert round tiny edit-button'
